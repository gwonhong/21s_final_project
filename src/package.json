{
  "name": "yacht-dice",
  "version": "1.0.0",
  "description": "Yacht Dice game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "build": {
    "productName": "YachtDice",
    "appId": "com.electron.yachtdice",
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "./src/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gwonhong/21s_final_project.git"
  },
  "author": "gwonhong",
  "contributors": [
    "GO-HA-N",
    "wltlr"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gwonhong/21s_final_project/issues"
  },
  "homepage": "https://github.com/gwonhong/21s_final_project#readme",
  "devDependencies": {
    "electron": "12.0.9",
    "electron-builder": "^22.10.5"
  },
  "dependencies": {
    "electron-json-storage": "^4.5.0",
    "requirejs": "^2.3.6"
  }
}
